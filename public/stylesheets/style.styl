body
  background #f2f2f2
  font 14px Helvetica, Arial, sans-serif
  overflow hidden
a
  color #00B7FF

#header
  position fixed
  width 100%
  left 0
  top 0
  height 40px
  text-align center
  padding 5px 0
  margin 0
  background #555
  border-bottom 1px solid #000
  border-top 1px solid #888
  z-index 2
  
  h1
    margin 0
    color #FFF
    text-shadow 0 1px #000

  
#container
  display block
  position absolute
  float left
  width 100%
  height 100%
  top 52px
  left 0
  background #f1f1f1
  border-top 1px solid #FFF
  
  #fader
    position absolute
    z-index 3
    left 0
    top 0
    background rgba(0, 0, 0, .6)
    min-height 95%
    min-width 100%
    
  #user-form
    position absolute
    width 260px
    display block
    padding 18px
    text-align left
    border-radius 5px
    background #333
    color #EEE
    left 35%
    top 35%
    z-index 4
    
    label
      font-size 11px
      font-weight bold
      text-transform uppercase
      float left
      clear both
      display block
    
    input[type=text]
      font normal 16px Arial, Helvetica, sans-serif
      padding 6px
      float left
      clear both
      display block
      border 1px solid #000
      border-radius 4px
      width 170px
      
    input[type=submit]
      float right
      font-size 11px 
      font-weight bold
      font-family Arial, Helvetica, sans-serif
      padding  0 10px
      margin 3px 5px
      height 30px
      line-height 30px
      border none
      border-radius 3px
      background #d2554f
      color #FFF
      text-shadow 0 -1px #8a3330
      text-align center      
      text-transform uppercase
      cursor pointer
      letter-spacing .5px
    
  #main
    float left
    width 100%
    display block
    padding 0
    
    #time-container
      position absolute 
      top 1%
      left 45%
      
    #timeline
      ul#streams
        list-style none
        padding 0
        margin 0
        
        li 
          list-style none
          padding 10px
          margin 0
          border-bottom 1px solid #CDCDCD
          border-top 1px solid #EEE
          background #DDD

          img 
            vertical-align middle
          
          span
            background #999
            color #EEE
            font-size 10px
            margin 0 10px 0 0
            padding 3px 6px
            border-radius 2px
            text-transform uppercase
            box-shadow 0 1px 3px #333 inset
      
#user-message
  position fixed
  bottom 0
  left 0
  padding 2px
  margin 0
  width 99.5%
  background #DDD
  
  #resize
    position absolute
    right 5px
    top -16px
    text-transform uppercase
    font-size 10px
    background #DDD
    border-radius 3px 3px 0 0
    padding 3px 
    z-index 2
    cursor pointer
    border 1px solid #CCC
    border-bottom none
  
  form
    font-family Arial, Helvetica, sans-serif
    
    input[type=submit]
      position absolute
      right 2px
      font-size 11px 
      font-weight bold
      font-family Arial, Helvetica, sans-serif
      padding  0 10px
      margin 3px 5px
      height 30px
      line-height 30px
      border none
      border-radius 3px
      background #d2554f
      color #FFF
      text-shadow 0 -1px #8a3330
      text-align center      
      text-transform uppercase
      cursor pointer
      letter-spacing 0.5px
      z-index 2
      
    textarea
      border 1px solid #CCC
      background #f2f2f2
      float left
      font-family Arial, Helvetica, sans-serif
      font-size 14px
      font-weight normal
      line-height 30px
      height 30px
      width 99.5%
      outline none
      