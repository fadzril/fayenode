#notification
  width 100%
  margin 0
  padding 10px 0
  text-align center
  background red
  color white
  font-weight bold
  font-size 16px
  position fixed
  top 0
  left 0
  
  &.passed
    background green

  
#content
  width 100%
  display block
  float left
  margin 0
  padding 0
  background #f3f3f3
  
  #connection
    padding 8px 0
    text-align center
    text-shadow 0 1px #333
    color #FFF
    float left
    width 100%
    background #222
  
  #publish, #subscriber
    width 48%
    padding 1%
    margin 0
    float left
    
    ul
      display block
      list-style none
      padding 0
      margin 0
      
      li
        list-style none
        display block
        margin 0
        padding 5px 0
        
        label
          display block
          text-transform uppercase
          font-size 11px
          font-weight bold
        
        input[type=text], textarea
          width: 98%
          padding 1%
          font-size 14px
          border-radius 4px
          border 1px solid #EEE
          
        textarea
          font-family 'Monaco', Tahoma
          font-size 11px
          
        input[type=submit]
          border none
          background #999
          color #FFF
          text-shadow 0 -1px #8a3330
          background #d2554f
          padding 8px 16px
          margin 0
          float right
          font-size 11px
          font-weight bold
          font-family Arial
          text-transform uppercase
          border-radius 3px
          letter-spacing 0.5px
          
  #subscriber
    #subscriptions
      height 300px
      overflow auto
      float left
      width 100%
 
#log 
  clear both
  
  #logger
    padding 8px 0
    margin 8px 0 0 0
    text-align center
    text-shadow 0 1px #333
    color #FFF
    float left
    width 100%
    background #222
  
table
  width 100%
  text-align left
  
  th
    font-weight bold
    font-size 11px
    text-transform uppercase
    text-align center
    background #999
    color #333
    padding 6px 10px
  
  td
    padding 5px 10px
    border-bottom 1px dashed #DDD
    
    input.cancel
      border none
      background #999
      color #FFF
      text-shadow 0 -1px #8a3330
      background #d2554f
      padding 5px 12px
      margin 0
      float right
      font-size 11px
      font-weight bold
      font-family Arial
      text-transform uppercase
      border-radius 3px
      letter-spacing 0.5px
      
    &.font-fixed
      font-family 'Monaco', Tahoma
      font-size 11px